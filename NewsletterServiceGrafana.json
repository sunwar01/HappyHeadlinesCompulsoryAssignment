{
  "title": "NewsletterService Dashboard",
  "uid": "newsletter-service-dashboard",
  "version": 3,
  "refresh": "5s",
  "panels": [
    {
      "title": "Newsletter Send Latency (P50/P95/P99)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "ff34t68qehypse" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
    "targets": [
  { "expr": "rate(http_request_duration_seconds_sum{job=\"newsletter-service\", http_route=\"/send\"}[5m]) / rate(http_request_duration_seconds_count{job=\"newsletter-service\", http_route=\"/send\"}[5m])", "legendFormat": "Avg Send" }
   ],
      "fieldConfig": { "defaults": { "unit": "s" } }
    },
    {
      "title": "CPU Usage",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "ff34t68qehypse" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        { "expr": "rate(process_cpu_seconds_total{job=\"newsletter-service\"}[5m]) * 100", "legendFormat": "CPU %", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "percent" } }
    },
    {
      "title": "Memory (Working Set)",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "ff34t68qehypse" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 4 },
      "targets": [
        { "expr": "process_working_set_bytes{job=\"newsletter-service\"}", "refId": "A" }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "title": "Newsletter UP",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "ff34t68qehypse" },
      "gridPos": { "h": 3, "w": 3, "x": 21, "y": 0 },
      "targets": [
        { "expr": "up{job=\"newsletter-service\"}", "refId": "A" }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } }, "type": "value" }
          ],
          "thresholds": { "steps": [ { "color": "red" }, { "color": "green", "value": 1 } ] }
        }
      },
      "options": { "text": { "valueSize": 28 } }
    }
  ]
}